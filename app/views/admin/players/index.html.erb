<h2>Lista de jogadores</h2>
<%= link_to 'Cadastrar novo', new_admin_player_path %>
<%= link_to 'Zerar rank', admin_reset_wins_path, method: :put %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Opções</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, admin_player_path(player) %></td>
        <td>
          <%= link_to 'Editar', edit_admin_player_path(player) %>
          <%= link_to 'Excluir', admin_player_path(player), :confirm => 'Tem certeza?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
